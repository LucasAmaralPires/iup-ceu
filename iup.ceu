    CEU_Value* args[1] = { &text };
    CEU_Block block = { 1, NULL, { NULL, NULL } };
    CEU_Frame frame = { &ceu_mem->iup_button_cb.Dyn->Proto, &block, NULL, {} };
    ceu_mem->iup_text_cb.Dyn->Proto.f(&frame, 1, args);
