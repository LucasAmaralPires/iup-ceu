^"prelude.ceu"
^"int.ceu"
^"long.ceu"
^"iup.ceu"

output Iup.Open

spawn {
    var labelC: _(Ihandle*)
    var labelF: _(Ihandle*)
    {
        output Iup.Label [/labelC, _("Celsius =")]
        output Iup.Label [/labelF, _("Fahrenheit")]
    }

    var tempC: _(Ihandle*)
    {
        output Iup.Text   /tempC
        output Iup.Set.Str [tempC, _("SIZE"), _("50")]
        output Iup.Set.Str [tempC, _("MASK"), _IUP_MASK_FLOAT]
        output Iup.Set.Str [tempC, _("VALUE"), _("")]
    }

    var tempF: _(Ihandle*)
    {
        output Iup.Text   /tempF
        output Iup.Set.Str [tempF, _("SIZE"), _("50")]
        output Iup.Set.Str [tempF, _("MASK"), _IUP_MASK_FLOAT]
        output Iup.Set.Str [tempF, _("VALUE"), _("")]
    }

    var hbox: _(Ihandle*)
    {
        output Iup.HBox   /hbox
        output Iup.Append [hbox, tempC]
        output Iup.Append [hbox, labelC]
        output Iup.Append [hbox, tempF]
        output Iup.Append [hbox, labelF]
        output Iup.Set.Str [hbox, _("MARGIN"), _("10x10")]
        output Iup.Set.Str [hbox, _("GAP"), _("10")]
        output Iup.Set.Str [hbox, _("ALIGNMENT"), _("ACENTER")]
    }

    var dlg: _(Ihandle*)
    {
        output Iup.Dialog [/dlg, hbox]
        output Iup.Set.Str [hbox, _("TITLE"), _("Temperature")]
    }

    output Iup.ShowXY [dlg, _IUP_CENTER, _IUP_CENTER]

    par {
        every isEventText [/evt,tempC] {
            var v: _float
            output Iup.Get.Float [tempC, _("VALUE"), /v]
            output Iup.Set.StrF  [tempF, _("VALUE"), _("%.2lf"), _($v * (9./5.) + 32)]
        }
    } with {
        every isEventText [/evt,tempF] {
            var v: _float
            output Iup.Get.Float [tempF, _("VALUE"), /v]
            output Iup.Set.StrF  [tempC, _("VALUE"), _("%.2lf"), _(($v - 32) * (5./9.))]
        }
    }
}

output Iup.Loop
output Iup.Close
